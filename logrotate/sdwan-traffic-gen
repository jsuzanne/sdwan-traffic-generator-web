/var/log/sdwan-traffic-gen/*.log {
    daily
    rotate 7
    size 100M
    compress
    delaycompress
    missingok
    notifempty
    create 0644 root root
    sharedscripts
    postrotate
        /bin/kill -HUP `cat /var/run/syslogd.pid 2> /dev/null` 2> /dev/null || true
    endscript
}

/var/log/sdwan-traffic-gen/*.json {
    daily
    rotate 3
    size 10M
    compress
    missingok
    notifempty
    create 0644 root root
}
